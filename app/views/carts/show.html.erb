<div class="cart_title">Your Cart</div>
<div class="cart_body">
	
	<div id="table_title">
	  <div class="line_item_title">title</div>
	  <div class="line_item_number">price</div>
	  <div class="line_item_number">quantity</div>
	  <div class="line_item_number">subtotal</div>
    </div>
    
    <% $count = 0 %>
	<%= render @cart.line_items %>
	
	<%= button_to 'Checkout', new_order_path, :method => :get, :class => "btn_cart" %>
	<div class="total_line">
		<span class="total_cell">Total: </span>
		<span class="total_cell"><%= number_to_currency(@cart.total_price) %> </span>
	</div>
	<%= button_to 'Empty cart', @cart, :method => :delete, :class => "btn_cart warning",
		:confirm => 'Are you sure?' %>	
</div>




