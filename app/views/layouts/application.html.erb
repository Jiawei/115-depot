<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "depot", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

  <!--Login-->
  <%= stylesheet_link_tag "login" %>
  <!--Category-->
    <meta http-equiv="Content-Type" content="text/html; charset=gb2312" />
  <%= stylesheet_link_tag "category" %>
  <script type="text/javascript" src="javascripts/sdmenu.js"> </script>
  <script type="text/javascript">
  // <![CDATA[
  var myMenu;
  window.onload = function() {
    myMenu = new SDMenu("my_menu");
    myMenu.init();
  };
  // ]]>
  </script>


</head>

<body id="store">
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || t('.title') %>
    
    
    <!--locale-->
    <%= form_tag store_path, :class => 'locale' do %>
      <%= select_tag 'set_locale',
	    options_for_select(LANGUAGES, I18n.locale.to_s),
        :onchange => 'this.form.submit()' %>
      <%= submit_tag 'submit' %>
      <%= javascript_tag "$$('.locale input').each(Element.hide)" %>
    <% end %>
    
    <!--search-->
    <%= form_tag searches_path, :class => 'search', :method => 'get' do %>
    <%= text_field_tag "q", params[:q] %>
    <%= submit_tag "Search" , :class => 'seaBn'%>
    <% end %>
    
	 <div id="menu">
            <ul>                                                                       
				<li class="selected">
					<%= link_to t('.home'), store_path %>
				</li>
			<!--	<li>
					<a href="http://www.../faq"><%= t('.questions') %></a>
			</li>  -->
				<li>
					<a href="http://www.../news"><%= t('.news') %></a>
				</li>
			<!--	<li>
					<a href="http://www.../contact"><%= t('.contact') %></a>
			</li>  -->
				<li><%= link_to 'Help', {:controller => "help", :action => "index" } %>
					
				</li>
				
			<% if session[:user_id] == nil %>
				
				<li><%= link_to 'Register', {:controller => "users", :action => "new" } %> </li>
				<li><%= link_to 'Login', {:controller => "sessions", :action => "new"} %> </li>
			<% else %>
				<li><%= link_to 'Cart', @cart %> </li>
			<% end %>
			
			<% if session[:user_id] && User.find(session[:user_id]).usertype == "admin" %>			
				<li><%= link_to 'Orders', orders_path %></li>
				<li><%= link_to 'Products', products_path %></li>
				<li><%= link_to 'Users', users_path %></li>
			<% end %>

			<% if session[:user_id] && User.find(session[:user_id]).usertype == "seller" %>
				<li><%= link_to 'Products', products_path %></li>
			<% end %>
			
			<% if session[:user_id] %>
				<li><%= link_to 'logout', logout_path, :method => :delete %> </li>
			<% end %>
			
            </ul>
        </div>     
  </div>
<!--<div id="columns">
		 <div id="side">
			<div id="cart">
			  <% if @cart %>
				  <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
				  <%= render @cart %>
				<% end %>
			  <% end %>  
			</div>
       	

		</div> -->
		<div id="main">
			<%= yield %>
		</div>
	<!--</div>-->
	
	<div class = "suggest display" id = "login_suggest">
		<div>
			Login first, please.
		</div>
		<br />
		<%= link_to 'Login', {:controller => "sessions", :action => "new"} %>
	</div>
</body>
</html>
