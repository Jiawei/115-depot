<h2>Listing orders</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Email</th>
    <th>Pay type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
	<% if order.seller_id == session[:user_id] || order.customer_id == session[:user_id] %>
	  <tr>
	    <td><%= order.name %></td>
	    <td><%= order.address %></td>
	    <td><%= order.email %></td>
	    <td><%= order.pay_type %></td>
	    <td><%= link_to 'Show', order %></td>
	    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
<% end %>
</table>

<br />
<p><%= will_paginate @orders %></p>
